#include <stdio.h>
#include<stdlib.h>
struct node{
    int v;
    struct node *r;
    struct node *l;
};
struct node *createnode(int val)
{
    struct node *h;
    h->v=val;
    h->r=NULL;
    h->l=NULL;
    return h;
}
struct node *add(struct node *root,int n)
{
    if(root==NULL)
    {
        return createnode(n);
    }
    else if(n<root->v)
    {
        root->l=add(root->l,n);
    }
    else{
        root->r=add(root->r,n);
    }
    return root;
}
struct node *createtree()
{
    struct node *root=NULL;
    int n,s;
    printf("enter value\n");
    scanf("%d",&n);
    if(root==NULL)
    {
        root=createnode(n);
    }
    
        printf("enter -1 to stop\n");
        scanf("%d",&s);
        while(s!=-1)
        {
            printf("enter value\n");
            scanf("%d",&n);
            root=add(root,n);
            printf("-1 to stop\n");
            scanf("%d",&s);
        }
    
    
}
void print(struct node *root)
{
    if(root!=NULL)
    {
        printf("%d",root->v);
        print(root->l);
        print(root->r);
    }
}
int main()
{
    struct node *t;
    t=createtree();
    print(t);
}
